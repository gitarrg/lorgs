{
    "compilerOptions": {
        "target": "ES5", // Specify ECMAScript target version
        "lib": [
            "dom",
            "DOM.Iterable",
            "esnext"
        ], // List of library files to be included in the compilation
        "module": "commonjs",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx", // Support JSX in .tsx files
        "types": [],
    },

    "include": [
        "frontend/src/*" // *** The files TypeScript should type check ***
    ],

    "exclude": [ // *** The files to not type check ***
        "node_modules",
    ],

    "plugins": [
        { "name": "typescript-plugin-css-modules" }
    ]
}
