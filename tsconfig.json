{
    "compilerOptions": {
        "target": "ES2015", // Specify ECMAScript target version
        "lib": [
            "dom",
            "DOM.Iterable",
            "esnext"
        ], // List of library files to be included in the compilation
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx", // Support JSX in .tsx files
    },
    "include": [
        "lorgs/frontend/**/*" // *** The files TypeScript should type check ***
    ],
    "exclude": [ // *** The files to not type check ***
        "node_modules",
    ],

    "plugins": [
        { "name": "typescript-plugin-css-modules" }
    ]
}
